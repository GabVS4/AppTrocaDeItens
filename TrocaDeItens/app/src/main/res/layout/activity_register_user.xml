<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    tools:context=".RegisterUserActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Cadastro"
        android:textColor="@color/hint"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edtUsername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.321" />

    <EditText
        android:id="@+id/edtUsername"
        android:layout_width="329dp"
        android:layout_height="60sp"
        android:height="100sp"
        android:background="@drawable/rounded_input"
        android:ems="10"
        android:hint="Digite seu nome de usuário"
        android:inputType="text"
        android:paddingStart="16dp"
        android:textColor="@color/black"
        android:textColorHint="@color/hint"
        android:textColorLink="#1C1C1C"
        android:textCursorDrawable="@drawable/cursor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.186" />

    <EditText
        android:id="@+id/edtEmailR"
        android:layout_width="329dp"
        android:layout_height="60sp"
        android:height="100sp"
        android:background="@drawable/rounded_input"
        android:ems="10"
        android:hint="Digite seu email"
        android:inputType="text"
        android:paddingStart="16dp"
        android:textColor="@color/black"
        android:textColorHint="@color/hint"
        android:textColorLink="#1C1C1C"
        android:textCursorDrawable="@drawable/cursor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.275" />

    <EditText
        android:id="@+id/edtPasswordR"
        android:layout_width="329dp"
        android:layout_height="60sp"
        android:height="100sp"
        android:background="@drawable/rounded_input"
        android:backgroundTint="#E2E2E2"
        android:ems="10"
        android:hint="Digite sua senha"
        android:inputType="text"
        android:paddingStart="16dp"
        android:password="true"
        android:textColor="@color/black"
        android:textColorHint="@color/hint"
        android:textColorLink="#9E9E9E"
        android:textCursorDrawable="@drawable/cursor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.365"
        tools:ignore="Deprecated" />

    <EditText
        android:id="@+id/edtPasswordRR"
        android:layout_width="329dp"
        android:layout_height="60sp"
        android:layout_marginTop="8dp"
        android:height="100sp"
        android:background="@drawable/rounded_input"
        android:backgroundTint="#E2E2E2"
        android:ems="10"
        android:hint="Confirme sua senha"
        android:inputType="text"
        android:paddingStart="16dp"
        android:password="true"
        android:textColor="@color/black"
        android:textColorHint="@color/hint"
        android:textColorLink="#9E9E9E"
        android:textCursorDrawable="@drawable/cursor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.447" />

    <TextView
        android:id="@+id/registerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:text="Clique aqui se já possui uma conta"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.225"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.514" />

    <Button
        android:id="@+id/btnAddPhoto"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/yellow"
        android:text="Adicionar foto"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:cornerRadius="5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.601" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/yellow"
        android:text="Cadastrar"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:cornerRadius="5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.672" />

</androidx.constraintlayout.widget.ConstraintLayout>